# MANIFEST.in - Include non-Python files in distribution package

# Documentation
include README.md
include LIBRARY-README.md
include LICENSE-CODE
include requirements.txt

# CLI documentation
include src/cli/README.md

# Test fixtures
recursive-include tests/fixtures *.json
recursive-include tests/fixtures *.txt

# Documentation
recursive-include docs *.md

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

# Exclude version control
global-exclude .git*
global-exclude .hg*

# Exclude build artifacts
global-exclude build
global-exclude dist
global-exclude *.egg-info
